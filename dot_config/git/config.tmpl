[init]
	defaultBranch = main

[user]
	email = {{ .git.email }}
	name = {{ .git.name }}

	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAICD1u1caVFg+AMYMi0NHOF783927yKbzSJBGI+BN5aDF

[commit]
	gpgsign = true

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[pull]
	rebase = false
[push]
	autoSetupRemote = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true  # use n and N to move between diff sections
	dark = true      # or light = true, or omit for auto-detection

[merge]
	conflictStyle = zdiff3