[init]
	defaultBranch = main

[user]
	email = {{ .git.email }}
	name = {{ .git.name }}

	signingkey = {{ (onepasswordDetailsFields "t7ywvz2xwrlrxxeilo4fi2mwqm" "" .op.account).public_key.value }}

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
  gpgsign = true

[pull]
	rebase = false
[push]
	autoSetupRemote = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true  # use n and N to move between diff sections
	dark = true      # or light = true, or omit for auto-detection

[merge]
	conflictStyle = zdiff3
