{{ if (eq .install_antidote "true") -}}
#!/bin/zsh

ANTIDOTE="$(brew --prefix)/share/antidote"
source "$ANTIDOTE/antidote.zsh"

# dconf.ini hash: {{ include "dot_config/zsh/dot_zplugins" | sha256sum }}
echo "Updating .zplugins.sh"
antidote bundle < {{ joinPath .chezmoi.sourceDir "dot_config/zsh/dot_zplugins" | quote }} > ~/.config/zsh/.zplugins.zsh
echo "Done!"
{{ end -}}